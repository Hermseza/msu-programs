// File		:  program_007_IF_rich_or_poor
// Goal		:  To complete Lab 7, IF statement, for determining if a person is rich or poor
// Purpose	:  To understand how to use an IF statement in real life situation
//					involving finances

#include <stdio.h>

int main()
{
	int salary;
	printf("\n Please enter the salary of the person : ");
	scanf_s("%d", &salary);

	if(salary >= 100000)
	{
		printf("\n You are RICH!");
	}
	else
	{
		printf("\n You are considered to be POOR by this program");
	}

	getchar();
	getchar();
	return 0;
}
