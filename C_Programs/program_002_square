#include <stdio.h>

int main()
{
	int side;
	int area;
	int perimeter;

	printf("\n Please enter the side of a square : ");
	scanf_s("%d", &side);
	area = side * side;
	perimeter = 4 * side;
	printf("\n For a square with side %d, the area is %d, and the perimeter is %d", side, area, perimeter);
	getchar();
	getchar();
	return 0;
