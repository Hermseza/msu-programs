#include <stdio.h>

int main()
{
	int x;  //the input integer
	int y;  //the formula we will be putting x into

	//get input x
	printf("Please enter a value for x : ");
	scanf_s("%d", &x);

	//put the inputted x into the formula
	y = ((((3 * x + 2) * x - 5) * x - 1) * x + 7) * x - 6;
	
	//print results
	printf("\nx = %d, y = %d", x, y);

	getchar();
	getchar();

	return 0;
}
