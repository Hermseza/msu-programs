// Goal		:  To complete problem 5 for assignment 1.
// Purpose	:  to enter a value for x, then display the value of the polynomial.

#include <stdio.h>

int main()
{
	int x;  //the input integer
	int y;  //the polynomial we will be solving for x

	//get the user input x
	printf("Please enter a value for x : ");
	scanf_s("%d", &x);

	//put y in terms of the inputted x
	y = (3 * x * x * x * x * x) + (2 * x * x * x * x) - (5 * x * x * x) - (x * x) + (7 * x) - 6;
	
	//print results
	printf("\nx = %d, y = %d", x, y);

	getchar();
	getchar();

	return 0;
}
