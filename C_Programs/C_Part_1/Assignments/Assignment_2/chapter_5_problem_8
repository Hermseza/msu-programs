

#include <stdio.h>

int main()
{
	int hour;
	int min;
	int time;

	printf("\n Enter a 24-hour time: ");
	scanf_s("%d:%d", &hour, &min);

	time = (hour * 60) + min;

	if(time <= 531)
	{
		printf("\n Closest departure time is 8:00 a.m., arriving at 10:16 a.m.");
	}
	else if(time <= 631)
	{
		printf("\n Closest departure time is 9:43 a.m., arriving at 11:52 a.m.");
	}
	else if(time <= 723)
	{
		printf("\n Closest departure time is 11:19 a.m., arriving at 1:31 p.m.");
	}
	else if(time <= 803)
	{
		printf("\n Closest departure time is 12:47 p.m., arriving at 3:00 p.m.");
	}
	else if(time <= 892)
	{
		printf("\n Closest departure time is 2:00 p.m., arriving at 4:08 p.m.");
	}
	else if(time <= 1042)
	{
		printf("\n Closest departure time is 3:45 p.m., arriving at 5:55 p.m.");
	}
	else if(time <= 1222)
	{
		printf("\n Closest departure time is 7:00 p.m., arriving at 9:20 p.m.");
	}
	else
	{
		printf("\n Closest departure time is 9:45 p.m., arriving at 11:58 p.m.");
	}


	getchar();
	getchar();

	return 0;

}
