// Goal		:  To complete Problem 2 in Chapter 5
// Purpose	:  To convert a given input from 24 hour time to 12 hour time.

#include <stdio.h>

int main()
{
	int n;
	int m;

	printf("\nEnter a 24-hour time : ");
	scanf_s("%d:%d", &n, &m);

	if(n > 12)
	{
		printf("\nEquivalent 12-hour time : %d:%d PM", n - 12, m);
	}
	else
	{
		printf("\nEquivalent 12-hour time : %d:%d AM", n, m);
	}

	getchar();
	getchar();

	return 0;
}
