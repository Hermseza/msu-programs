// File		:  chapter_6_problem_6
// Goal		:  To complete problem 6 in chapter 6
// Purpose	:  To display all of the even squares between 1 and a given number.

#include <stdio.h>

int main()
{
	int n;
	int i;

	printf("\n Please enter a number : ");
	scanf_s("%d", &n);

	for(i = 2; i * i <= n; i += 2)
	{
		printf("\n %d", i * i);
	}

	getchar();
	getchar();

	return 0;
}
