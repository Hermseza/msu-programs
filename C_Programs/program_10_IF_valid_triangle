// Program	:  program_10_IF_valid_triangle
// Goal		:  To complete Lab 10, a program to input sides of a triangle
// Purpose	:  The use AND practice the AND condition

#include <stdio.h>

int main()
{
	int a;
	int b;
	int c;

	printf("\n Please enter 3 sides of a triangle : ");
	scanf_s("%d %d %d", &a, &b, &c);

	if
		( (a + b > c) && (a + c > b) && (b + c > a) )
	{
		printf("\n The sides %d, %d, and %d form a valid triangle", a, b, c);
	}
	else
	{
		printf("\n The sides %d, %d, and %d DO NOT FORM a valid triangle", a, b, c);
	}
	
	getchar();
	getchar();
	return 0;
}
